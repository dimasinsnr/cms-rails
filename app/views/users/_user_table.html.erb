<div class="card" style="border-radius: 7px">
    <div class="card-header">
        <h5 class="card-title mb-0">User</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <% if users.empty? %>
                    <tr>
                        <td colspan="6" class="text-center">Tidak ada data</td>
                    </tr>
                <% else %>
                    <% users.each_with_index do |user, index| %>
                        <tr id='user-row-<%= @start_index + 1  %>'>
                            <td><%= @start_index + index %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <% if can?(:create, User) %>
                                <td>
                                    <a href="javascript:void(0)" style="text-decoration: none;" class="text-body" data-bs-toggle="tooltip" data-bs-original-title="Edit Produk" onclick="onEdit('<%= user.id %>', '<%= user.email %>', '<%= user.role %>')">
                                        <i class="bi bi-pencil-square fs-5"></i>
                                    </a>
                                    <a href="javascript:void(0)" style="text-decoration: none;" class="text-body ms-3" data-bs-toggle="tooltip" data-bs-original-title="Delete Produk" onclick="onDelete('<%= user.id %>', '<%= index + 1 %>')">
                                        <i class="bi bi-trash fs-5"></i>
                                    </a>
                                </td>
                            <% end %>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>

        <div class="pagination-container">
            <%= paginate @users, remote: false, links: true, next_label: "Next ›", previous_label: "‹ Prev", window: 10 %>
        </div>
    </div>
</div>
